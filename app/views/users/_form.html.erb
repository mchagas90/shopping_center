<div class="row-fluid row">
  <div class="col-sm-6 span4 well">

    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> impossibilitaram que este item fosse salvo:</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :email %><br>
        <%= f.text_field :email, :class => 'form-control'  %>
      </div>

      <div class="form-group">
        <div class="checkbox">
        <label>
          <%= f.check_box :admin %> Admin?
        </label>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Enviar", :class => 'btn btn-primary' %>
      </div>
    <% end %>

  </div>
</div>

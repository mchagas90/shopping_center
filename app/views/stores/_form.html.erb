<div class="row-fluid row">
  <div class="col-sm-6 span4 well">

    <%= form_for(@store) do |f| %>
      <% if @store.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@store.errors.count, "error") %> impossibilitaram que este item fosse salvo:</h2>

          <ul>
          <% @store.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :registration_code %><br>
        <%= f.text_field :registration_code, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit :class => 'btn btn-primary' %>
      </div>
    <% end %>

  </div>
</div>
